[user]
	name = Adrien Thebo
	email = adrien@lagrange-automation.io
[core]
	excludesfile = ~/.gitignore
	editor = vim
[color]
	interactive = auto
	status = auto
	ui = auto
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
	newMoved = cyan
	oldMoved = blue
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[diff]
	mnemonicprefix = true
[merge]
	stat = true
	conflictstyle = diff3
[push]
	default = current
[alias]
	wdiff = diff --word-diff
	ci = commit -v
	st = status --short --branch
	wat = log -p
	lg = "log --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%an%C(reset) %C(cyan)%cr%C(reset) %s %C(green)%d%C(reset)' --graph"
	forward = pull --ff-only
	redo = commit --amend -C HEAD
	rebase-master = !git rebase -i $(git merge-base master HEAD)
	where = rev-parse --abbrev-ref HEAD
	smash = reset --hard
	checkout-pull = "!fn() { git fetch origin \"refs/pull/$1/head\" && git checkout -b \"pull-$1\" && git reset --hard FETCH_HEAD ; } ; fn "
[github]
	user = adrienthebo
[gist]
	browse = yes
[http]
	cookiefile = ~/.gitcookies
